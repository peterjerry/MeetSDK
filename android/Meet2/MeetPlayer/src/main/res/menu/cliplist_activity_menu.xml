<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ClipListActivity" >

    <item
        android:id="@+id/list_clip"
        android:orderInCategory="1"
        android:title="列出媒体文件"
        app:showAsAction="always"
        android:icon="@drawable/list" />
    <item
        android:id="@+id/update_apk"
        android:orderInCategory="2"
        android:title="升级"
        app:showAsAction="never"
        android:icon="@drawable/update" />
    <item
        android:id="@+id/settings"
        android:orderInCategory="3"
        android:title="设置"
        app:showAsAction="always"
        android:icon="@drawable/settings" >
        <menu>      
            <item
		        android:id="@+id/preview"
		        android:title="预览"
		        android:checkable="true" />
            <item
		        android:id="@+id/loop"
		        android:title="循环播放"
		        android:checkable="true" />
            <item
		        android:id="@+id/no_video"
		        android:title="no video"
		        android:checkable="true" />
            <item
		        android:id="@+id/remember_last_pos"
		        android:title="从上次播放位置开始"
		        android:checkable="true" />
            <item
		        android:id="@+id/list_audio_file"
		        android:title="媒体文件包含音频文件"
		        android:checkable="true" />
            <item
		        android:id="@+id/debug_info"
		        android:title="调试信息"
		        android:checkable="true" />
        </menu>
    </item>
    <item
        android:id="@+id/option"
        android:orderInCategory="4"
        android:title="选项"
        app:showAsAction="always"
        android:icon="@drawable/option" >
    	<menu>
            <item
		        android:id="@+id/dlna_dmr"
		        android:title="dlna推送视频"/>
		    <item
		        android:id="@+id/load_subtitle"
		        android:title="加载字幕文件"/>
		    <item
		        android:id="@+id/audio_dst"
		        android:title="声音推送"/>
		    <item
		        android:id="@+id/clean_media_db"
		        android:title="清空本地媒体库"/>
		    <item
		        android:id="@+id/scan_media"
		        android:title="扫描媒体文件"/>
			<item
				android:id="@+id/list_http"
				android:title="列出网络媒体"/>
		    <item
		        android:id="@+id/upload_crash_report"
		        android:title="手动上传日志"/>
		</menu>
	</item>
	<item
		android:id="@+id/video"
		android:orderInCategory="5"
		android:title="视频"
        app:showAsAction="always"
		android:icon="@drawable/option" >
        <menu>
            <item
                android:id="@+id/pptv_frontpage"
                android:title="聚力首页"/>
            <item
                android:id="@+id/pptv_video"
                android:title="聚力视频"/>
            <item
                android:id="@+id/sohu_video"
                android:title="搜狐视频"/>
            <item
                android:id="@+id/youku_video"
                android:title="优酷视频"/>
			<item
				android:id="@+id/inke_live"
				android:title="映客直播"/>
            <item
                android:id="@+id/parse_url"
                android:title="解析视频地址"/>
        </menu>
    </item>
    <item
        android:id="@+id/quit"
        android:orderInCategory="6"
        android:title="退出"
        app:showAsAction="never"
        android:icon="@drawable/quit" />

</menu>